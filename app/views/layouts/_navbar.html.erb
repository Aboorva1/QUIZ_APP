<header>
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
<%= image_tag "https://upload.wikimedia.org/wikipedia/commons/a/aa/Guess_Quiz_Logo.png", height: 24, width: 25, :class=> "d-inline-block align-text-top" %>
  <%= link_to 'Quiz App', quizzes_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div >
  <% if user_signed_in? %> 
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to 'Home', quizzes_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Leaderboard', leader_board_index_path, class: 'nav-link' %>
      </li>
      <% if !current_user.is_admin? %>
        <li class="nav-item">
          <%= link_to 'My Quiz', my_quiz_user_quizzes_path, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'User Board', home_index_path, class: 'nav-link' %>
        </li>
      <%end%>
    </ul>
  </div>
  <div class="navbar-collapse collapse order-3 dual-collapse2">
    <ul class="navbar-nav position-absolute end-0 mx-3">
    <%if current_user.image.attached?%>
        <%= image_tag(current_user.image,:class=> "profile") %>
    <%else%> 
      <% if current_user.is_admin? %>
        <img class= "profile" src ="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSe-OwJLExW6kXjgbYw_PfokaYVSPFlE8_Idg&usqp=CAU">
      <% else %>
        <img class= "profile" src ="https://media.istockphoto.com/id/1332100919/vector/man-icon-black-icon-person-symbol.jpg?s=612x612&w=0&k=20&c=AVVJkvxQQCuBhawHrUhDRTCeNQ3Jgt0K1tXjJsFy1eg=">
      <% end %>
    <% end %>
    <li class="nav-item">
      <%= link_to "Hi, #{current_user.name}", edit_user_registration_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
    </li>
    </ul>
  </div>
  <% end %>
</nav>
</header>
