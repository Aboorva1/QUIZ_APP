

<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://apptraitsolutions.com/wp-content/uploads/2021/01/C88IZyEo7g-1.jpg"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <h1 class="lead fw-normal mb-0 me-3">Sign Up</h1>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-outline mb-4">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, :class => "form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :email %><br />
            <%= f.text_field :email, autofocus: true, :class => "form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :password %><br />
            <%= f.text_field :password, autocomplete: "current-password", :class => "form-control form-control-lg" %>
          </div>
        
          <div class="form-outline mb-4">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "current-password", :class => "form-control form-control-lg" %>
          </div>
          <div class="actions">
            <%= f.submit "Sign up", :class =>"btn btn-light" %>
          </div>
         <% end %>
         <%= render "devise/shared/links" %>
         </div>
      </div>
    </div>
  </div>
</section>






          