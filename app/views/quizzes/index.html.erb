
<div class="container py-3">
  <div class="col-md-2 p-0">
    <%= render 'category_panel' %>
    <% if current_user.is_admin? %>
      <p class = "text-center"><%= link_to "New category", new_category_path, :class=>"btn btn-info" %> </p>
      <p class = "text-center"><%= link_to "New Sub category", new_sub_category_path, :class=>"btn btn-info" %> </p> 
    <% end %>
  </div>
</div>


  <div class = "quizzes">
    <h3 class="text-center text-dark fst-italic mb-3">Quizzes</h3>
    <div class="row">
      <% @quizzes.each do |quiz| %>
        <div class="col-12 col-lg-6">
          <div class="card text-center" style= "width: 400px;">
            <div class="card-body">
              <p class="card-text"><%= link_to quiz.title, quiz ,:class=>"btn btn-light" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% if current_user.is_admin? %>
      <p class = "text-center"><%= link_to "New Quiz", new_quiz_path, :class=>"btn btn-info"%></p>
    <% end %>
  <div class = "pagination">
    <%= will_paginate(@quizzes,:previous_label => "&laquo;", :next_label => "&raquo;",:class=>"small-font",:outer_window => 5,:inner_window => 5) %></li>
  </div>
</div>



  