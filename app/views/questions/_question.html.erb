<% if current_user.isadmin? %>
  <% if question.body.present? %>
    <p>
      <strong>Question:</strong>
  
         <%= link_to question.body, quiz_question_path(@quiz, question) %>
  
    </p>

    <p>
      <%= link_to '<button>Destroy Question</button>'.html_safe, [@question.quiz, question],
              method: :delete,
              data: { confirm: "Are you sure?" } %>
    </p>
  <%= link_to "<button>Edit Quiz Question</button>".html_safe, edit_quiz_question_path(@quiz, question) %>


  <%= link_to 'Back to quiz', quizzes_path %>
  <% end %>
<% else %>
  <% if question.body.present? %>
    <%= question.body %>
    <%= render partial: "options/form", locals: {question_options: question.options} %>  
  <% end %>
  
<% end %>     


