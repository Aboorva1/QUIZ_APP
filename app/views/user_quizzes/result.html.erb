
<div class="d-flex justify-content-center text-center">
  <div>
    <% score = @user_quiz.score %>
    <% questions_count = @user_quiz.quiz.questions.count %>
    <% average = (questions_count * 10) / 2 %>
    <% if score == (questions_count * 10) %>
      <h1 class="fst-italic">Amazing work! You got all questions right</h1>
      <img src="https://media.istockphoto.com/id/1183252990/vector/first-prize-gold-trophy-icon-prize-gold-trophy-winner-first-prize-vector-illustration-and.jpg?s=612x612&w=0&k=20&c=cr3yNa3yDHeqaN_-2W8TmGvuZ2hLXufO75KOdjY-1uo=", width="300", height="300",
          class= "img-fluid"> 
    <% elsif score > average%>
      <h1 class="fst-italic">Pretty impressive!</h1>
      <img src="https://media.istockphoto.com/id/1183252990/vector/first-prize-gold-trophy-icon-prize-gold-trophy-winner-first-prize-vector-illustration-and.jpg?s=612x612&w=0&k=20&c=cr3yNa3yDHeqaN_-2W8TmGvuZ2hLXufO75KOdjY-1uo=", width="300", height="300",
          class= "img-fluid"> 
    <% else score == 0%>
      <h1 class="fst-italic">Okay, that was pretty hard...Try again to get good score</h1>
    <% end %>
      <h3 class="mt-3 mb-3" >Your score is </h3>
      <%= score %> 
      <div class="row">
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body shadow">
              <h5 class="card-title">Total Questions</h5>
              <p class="card-text"><%= questions_count %></p>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body shadow">
              <h5 class="card-title">Answered Questions</h5>
              <p class="card-text"><%= @user_quiz.answers_count %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body shadow">
              <h5 class="card-title">Correct Answers</h5>
              <p class="card-text"><%= score / 10 %></p>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body shadow">
              <h5 class="card-title">Wrong Answers</h5>
              <p class="card-text"><%= @user_quiz.answers_count - score/10 %></p>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
<p class = "text-center">
<%= link_to "View answers", user_quizzes_path ,:class=>"btn btn-primary"%>
<%= link_to "Start again", quiz_path(@user_quiz.quiz_id),:class=>"btn btn-primary"%>
</p>

