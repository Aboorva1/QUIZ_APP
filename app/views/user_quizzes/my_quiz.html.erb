

<div class = "tables">
  <h1 class = 'text-center'>My Quizzes</h1>
  <p>
  <table class="table table-striped table-bordered align-middles table-condensed">
  <thead class="table-dark">
  <tr>
    <th class="text-center">Date</th>
    <th class="text-center">Quiz</th>
    <th class="text-center">Score</th>
  </tr>
  </thead>
  <tbody class="text-center bg-blue">
    <% @user_quizzes.each do |user_quiz| %>
      <tr>
        <td><%= user_quiz.created_at.strftime("%d %b %Y") %></td> 
        <td><%= user_quiz.quiz.title %></td> 
        <td><%= user_quiz.score %></td>         
      </tr>
    <% end %>
  </tbody>
  </table>
  </p>
</div>