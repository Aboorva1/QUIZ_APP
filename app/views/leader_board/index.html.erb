<%= link_to 'Category based leader board', leader_board_category_path, class: 'btn btn-info' %>

<div class = "tables">

<h1 class = 'text-center'>Leaderboard</h1>
<h2 class = 'text-center'>Top 10 scores</h2>
<p>
<table class="table table-striped table-bordered align-middle table-condensed">
<thead class="table-dark">
<tr>
  <th class="text-center">Name</th>
  <th class="text-center">Quiz</th>
  <th class="text-center">Score</th>
  <th class="text-center">Date</th>
</tr>
</thead>
<tbody class="text-center">
  <% @user_quizzes.zip(@images) do |user_quiz, image| %>
    <tr class="bg-blue">
      <td class="pt-2">
        <%if image.attached?%>
          <%= image_tag(image,:class=> "img") %>
        <%else%> 
          <img class= "img" src ="https://media.istockphoto.com/id/1332100919/vector/man-icon-black-icon-person-symbol.jpg?s=612x612&w=0&k=20&c=AVVJkvxQQCuBhawHrUhDRTCeNQ3Jgt0K1tXjJsFy1eg=">
        <% end %>
        <div class="pl-lg-5 pl-md-3 pl-1 name"><%= user_quiz.user.name %></div>
      </td> 
      <td><%= user_quiz.quiz.title %></td> 
      <td><%= user_quiz.score %></td>   
      <td><%= time_ago_in_words(user_quiz.created_at) %> ago </td> 
    </tr>
    <tr id="spacing-row">
    </tr>
  <% end %>
</tbody>
</table>
</p>
</div>
