
<div class = "tables">

<h1>Leaderboard</h1>
<h2>Top 10 scores</h2>
<p>
<table class="table table-striped table-bordered table-condensed">
<thead class="table-dark">
<thead class="table-dark">
<tr>
  <th class="text-center">Name</th>
  <th class="text-center">Quiz</th>
  <th class="text-center">Score</th>
  <th class="text-center">Date</th>
</tr>
</thead>
<tbody>
  <% @user_quizzes.zip(@images) do |user_quiz, image| %>
    <tr class="bg-blue">
      <td class="pt-2">
    <tr class="bg-blue">
      <td class="pt-2">
        <%if image.attached?%>
          <%= image_tag(image,:class=> "img") %>
        <%else%> 
          <img class= "img" src ="https://pic.onlinewebfonts.com/svg/img_162044.png">
        <% end %>
        <div class="pl-lg-5 pl-md-3 pl-1 name"><%= user_quiz.user.name %></div>
        <div class="pl-lg-5 pl-md-3 pl-1 name"><%= user_quiz.user.name %></div>
      </td> 
      <td><%= user_quiz.quiz.title %></td> 
      <td><%= user_quiz.score %></td>   
      <td><%= user_quiz.created_at.strftime("%d %b %Y") %></td>      
    </tr>
    <tr id="spacing-row">
      <td></td>
    </tr>
  <% end %>
</tbody>
</table>
</p>
</div>
