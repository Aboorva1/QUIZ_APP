

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th  class="text-center">Option</th>
  <th  class="text-center">Correct key</th>
  <th  class="text-center">Actions</th>
</tr>
</thead>
<tbody>
    <% question_options.all.each do |option| %>
      <tr>
        <td><%= option.option1 %></td>
        <td><%= option.correct_key %></td>         
        <td>
          
          <%= link_to(edit_quiz_question_option_path(@quiz, @question, option), class: "btn btn-small") do %>
            Edit <i class="icon-edit icon-white"></i>
          <% end %>

       
          <%= link_to 'Destroy', quiz_question_option_path(@quiz, @question, option), 
          method: :delete,
          data: { confirm: "Are you sure?" }, class: "btn btn-small btn-danger" %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<p>
<%= link_to 'Back', quizzes_path %>
</p>