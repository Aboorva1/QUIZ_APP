
<%= form_with(model: [@quiz, @question, @option], local: true) do |form| %> 
  <%= form.hidden_field :question_id, value: @question.id %>
  
  <p>
    <%= form.label :choice %><br>
    <%= form.text_field :choice %>
    <%= form.label :correct_option %>
    <%= form.radio_button :is_correct_answer, checked: true %>
  </p>
  <%= form.submit "Save Options" %>
  
<% end %>